{
    "name": "gosuperscript/axiom-interval",
    "description": "A PHP library that extends gosuperscript/axiom with support for Interval types, providing type-safe interval handling and operator overloading for schema validation",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-intl": "*",
        "gosuperscript/axiom": "^0.3.0",
        "superscript/interval": "^1.0.4"
    },
    "require-dev": {
        "infection/infection": "^0.29.14",
        "laravel/pint": "^1.22",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "robiningelbrecht/phpunit-coverage-tools": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Superscript\\Axiom\\Interval\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Superscript\\Axiom\\Interval\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:types": "vendor/bin/phpstan analyse",
        "test:unit": "vendor/bin/phpunit -d --min-coverage=100",
        "test:infection": "vendor/bin/infection --threads=max --show-mutations",
        "test": [
            "@test:types",
            "@test:unit",
            "@test:infection"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
